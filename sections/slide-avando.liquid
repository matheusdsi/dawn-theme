{% comment %}
  Slider Premium para Shopify Trade Theme
  Arquivo: sections/trade-premium-slider.liquid
{% endcomment %}

{%- liquid
  assign slider_id = 'trade-slider-' | append: section.id
  assign autoplay = section.settings.autoplay
  assign autoplay_speed = section.settings.autoplay_speed | times: 1000
  assign show_arrows = section.settings.show_arrows
  assign show_dots = section.settings.show_dots
  assign slider_height_desktop = section.settings.slider_height_desktop
  assign slider_height_mobile = section.settings.slider_height_mobile
-%}

<style>
  #{{ slider_id }} {
    --slider-height-desktop: {{ slider_height_desktop }}px;
    --slider-height-mobile: {{ slider_height_mobile }}px;
    --arrow-color: {{ section.settings.arrow_color | default: '#ffffff' }};
    --dot-color: {{ section.settings.dot_color | default: '#ffffff' }};
    --overlay-opacity: {{ section.settings.overlay_opacity | default: 30 | divided_by: 100.0 }};
  }

  .trade-slider-container {
    position: relative;
    width: 100%;
    height: var(--slider-height-desktop);
    overflow: hidden;
    {% if section.settings.full_width %}
      margin: 0 -2rem;
    {% endif %}
  }

  .trade-slider-wrapper {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .trade-slide {
    position: absolute;
    width: 100%;
    height: 100%;
    opacity: 0;
    transform: translateX(100%);
    transition: all {{ section.settings.transition_speed | default: 800 | divided_by: 1000.0 }}s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    overflow: hidden;
  }

  .trade-slide.active {
    opacity: 1;
    transform: translateX(0);
    z-index: 2;
  }

  .trade-slide.prev {
    transform: translateX(-100%);
    opacity: 0;
  }

  .slide-image-container {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .slide-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: transform 0.3s ease;
  }

  .slide-content {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: {{ section.settings.content_vertical_align | default: 'center' }};
    justify-content: {{ section.settings.content_horizontal_align | default: 'center' }};
    color: {{ section.settings.text_color | default: '#ffffff' }};
    text-align: {{ section.settings.text_align | default: 'center' }};
    padding: 2rem;
    z-index: 3;
  }

  .slide-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
  }

  .overlay-gradient {
    background: linear-gradient({{ section.settings.gradient_direction | default: 135 }}deg, 
      {{ section.settings.overlay_color | default: '#000000' | color_modify: 'alpha', section.settings.overlay_opacity | default: 30 | divided_by: 100.0 }}, 
      transparent 50%,
      {{ section.settings.overlay_color | default: '#000000' | color_modify: 'alpha', section.settings.overlay_opacity | default: 30 | plus: 10 | divided_by: 100.0 }}
    );
  }

  .overlay-solid {
    background: {{ section.settings.overlay_color | default: '#000000' | color_modify: 'alpha', section.settings.overlay_opacity | default: 30 | divided_by: 100.0 }};
  }

  .overlay-none {
    background: transparent;
  }

  .slide-text-wrapper {
    max-width: {{ section.settings.content_max_width | default: 600 }}px;
    transform: translateY(50px);
    opacity: 0;
    transition: all 0.8s ease;
    transition-delay: 0.3s;
  }

  .trade-slide.active .slide-text-wrapper {
    transform: translateY(0);
    opacity: 1;
  }

  .slide-title {
    font-size: {{ section.settings.title_size | default: 48 }}px;
    font-weight: {{ section.settings.title_weight | default: 700 }};
    line-height: {{ section.settings.title_line_height | default: 1.2 }};
    margin-bottom: {{ section.settings.title_margin_bottom | default: 16 }}px;
    color: {{ section.settings.title_color | default: '#ffffff' }};
  }

  .slide-description {
    font-size: {{ section.settings.description_size | default: 18 }}px;
    line-height: {{ section.settings.description_line_height | default: 1.6 }};
    margin-bottom: {{ section.settings.description_margin_bottom | default: 32 }}px;
    opacity: {{ section.settings.description_opacity | default: 90 | divided_by: 100.0 }};
    color: {{ section.settings.description_color | default: '#ffffff' }};
  }

  .slide-button {
    display: inline-block;
    padding: {{ section.settings.button_padding_v | default: 16 }}px {{ section.settings.button_padding_h | default: 32 }}px;
    background: {{ section.settings.button_bg_color | default: '#000000' }};
    color: {{ section.settings.button_text_color | default: '#ffffff' }};
    text-decoration: none;
    border-radius: {{ section.settings.button_border_radius | default: 4 }}px;
    font-weight: {{ section.settings.button_font_weight | default: 600 }};
    font-size: {{ section.settings.button_font_size | default: 16 }}px;
    border: {{ section.settings.button_border_width | default: 0 }}px solid {{ section.settings.button_border_color | default: 'transparent' }};
    transform: translateY(20px);
    opacity: 0;
    transition: all 0.5s ease;
    transition-delay: 0.6s;
  }

  .trade-slide.active .slide-button {
    transform: translateY(0);
    opacity: 1;
  }

  .slide-button:hover {
    background: {{ section.settings.button_hover_bg_color | default: '#333333' }};
    color: {{ section.settings.button_hover_text_color | default: '#ffffff' }};
    transform: translateY(-{{ section.settings.button_hover_lift | default: 2 }}px);
  }

  .nav-arrows {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: {{ section.settings.arrow_size | default: 60 }}px;
    height: {{ section.settings.arrow_size | default: 60 }}px;
    border: none;
    background: {{ section.settings.arrow_bg_color | default: '#ffffff' | color_modify: 'alpha', section.settings.arrow_bg_opacity | default: 20 | divided_by: 100.0 }};
    backdrop-filter: blur(10px);
    border-radius: {{ section.settings.arrow_border_radius | default: 50 }}%;
    color: var(--arrow-color);
    cursor: pointer;
    font-size: {{ section.settings.arrow_icon_size | default: 24 }}px;
    transition: all 0.3s ease;
    z-index: 100;
    display: flex;
    align-items: center;
    justify-content: center;
    border: {{ section.settings.arrow_border_width | default: 1 }}px solid {{ section.settings.arrow_border_color | default: '#ffffff' | color_modify: 'alpha', 0.3 }};
    {% unless show_arrows %}display: none;{% endunless %}
  }

  .nav-arrows:hover {
    background: {{ section.settings.arrow_bg_color | default: '#ffffff' | color_modify: 'alpha', section.settings.arrow_bg_opacity | default: 20 | plus: 15 | divided_by: 100.0 }};
    transform: translateY(-50%) scale({{ section.settings.arrow_hover_scale | default: 110 | divided_by: 100.0 }});
  }

  .prev-btn { 
    left: {{ section.settings.arrow_position | default: 24 }}px; 
  }
  
  .next-btn { 
    right: {{ section.settings.arrow_position | default: 24 }}px; 
  }

  .slider-indicators {
    position: absolute;
    bottom: {{ section.settings.dots_position | default: 24 }}px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: {{ section.settings.dots_spacing | default: 12 }}px;
    z-index: 100;
    {% unless show_dots %}display: none;{% endunless %}
  }

  .indicator {
    width: {{ section.settings.dot_size | default: 12 }}px;
    height: {{ section.settings.dot_size | default: 12 }}px;
    border-radius: {{ section.settings.dot_border_radius | default: 50 }}%;
    background: {{ section.settings.dot_inactive_color | default: '#ffffff' | color_modify: 'alpha', section.settings.dot_inactive_opacity | default: 40 | divided_by: 100.0 }};
    cursor: pointer;
    transition: all 0.3s ease;
    border: {{ section.settings.dot_border_width | default: 0 }}px solid {{ section.settings.dot_border_color | default: 'transparent' }};
  }

  .indicator.active {
    background: {{ section.settings.dot_active_color | default: '#ffffff' }};
    transform: scale({{ section.settings.dot_active_scale | default: 120 | divided_by: 100.0 }});
  }

  .autoplay-progress {
    position: absolute;
    bottom: 0;
    left: 0;
    height: {{ section.settings.progress_height | default: 3 }}px;
    background: {{ section.settings.progress_color | default: '#ffffff' }};
    transition: width 0.1s linear;
    z-index: 100;
    width: 0%;
    {% unless autoplay %}display: none;{% endunless %}
  }

  @media (max-width: 768px) {
    .trade-slider-container {
      height: var(--slider-height-mobile);
      {% if section.settings.mobile_full_width %}
        margin: 0 -1rem;
      {% endif %}
    }

    .slide-content {
      padding: 1.5rem;
    }

    .slide-title {
      font-size: {{ section.settings.mobile_title_size | default: 32 }}px;
    }

    .slide-description {
      font-size: {{ section.settings.mobile_description_size | default: 16 }}px;
      margin-bottom: {{ section.settings.mobile_description_margin | default: 24 }}px;
    }

    .slide-button {
      padding: {{ section.settings.mobile_button_padding_v | default: 12 }}px {{ section.settings.mobile_button_padding_h | default: 24 }}px;
      font-size: {{ section.settings.mobile_button_font_size | default: 14 }}px;
    }

    .nav-arrows {
      width: {{ section.settings.mobile_arrow_size | default: 50 }}px;
      height: {{ section.settings.mobile_arrow_size | default: 50 }}px;
      font-size: {{ section.settings.mobile_arrow_icon_size | default: 20 }}px;
    }

    .prev-btn { left: {{ section.settings.mobile_arrow_position | default: 16 }}px; }
    .next-btn { right: {{ section.settings.mobile_arrow_position | default: 16 }}px; }

    .slider-indicators {
      bottom: {{ section.settings.mobile_dots_position | default: 16 }}px;
      gap: {{ section.settings.mobile_dots_spacing | default: 8 }}px;
    }

    .indicator {
      width: {{ section.settings.mobile_dot_size | default: 10 }}px;
      height: {{ section.settings.mobile_dot_size | default: 10 }}px;
    }
  }
</style>

<div id="{{ slider_id }}" class="trade-slider-container">
  <div class="trade-slider-wrapper">
    {% for block in section.blocks %}
      {% liquid
        assign image_desktop = block.settings.image_desktop
        assign image_mobile = block.settings.image_mobile
        assign image_fit = block.settings.image_fit | default: 'cover'
        assign image_position = block.settings.image_position | default: 'center'
        assign border_radius = block.settings.border_radius | default: 0
        assign title = block.settings.title
        assign description = block.settings.description
        assign button_text = block.settings.button_text
        assign button_link = block.settings.button_link
        assign overlay_style = block.settings.overlay_style | default: 'gradient'
        
        if image_mobile and image_mobile != blank
          assign mobile_image = image_mobile
        else
          assign mobile_image = image_desktop
        endif
      %}
      
      <div class="trade-slide{% if forloop.first %} active{% endif %}" 
           data-slide="{{ forloop.index0 }}"
           {{ block.shopify_attributes }}>
        
        <div class="slide-image-container">
          {% if block.settings.use_full_width_image %}
            <picture>
              {% if mobile_image != image_desktop and mobile_image != blank %}
                <source media="(max-width: 768px)" srcset="{{ mobile_image | image_url: width: 768 }}">
              {% endif %}
              <img src="{% if image_desktop %}{{ image_desktop | image_url: width: 1920 }}{% else %}{{ 'placeholder.svg' | asset_url }}{% endif %}" 
                   alt="{{ title | escape }}" 
                   class="slide-image"
                   style="object-fit: {{ image_fit }}; object-position: {{ image_position }}; border-radius: 0;">
            </picture>
          {% else %}
            <picture>
              {% if mobile_image != image_desktop and mobile_image != blank %}
                <source media="(max-width: 768px)" srcset="{{ mobile_image | image_url: width: 768 }}">
              {% endif %}
              <img src="{% if image_desktop %}{{ image_desktop | image_url: width: 1920 }}{% else %}{{ 'placeholder.svg' | asset_url }}{% endif %}" 
                   alt="{{ title | escape }}" 
                   class="slide-image"
                   style="object-fit: {{ image_fit }}; object-position: {{ image_position }}; border-radius: {{ border_radius }}px; width: {{ block.settings.image_width | default: 100 }}%; height: {{ block.settings.image_height | default: 100 }}%; margin: auto;">
            </picture>
          {% endif %}
        </div>

        {% unless overlay_style == 'none' %}
          <div class="slide-overlay overlay-{{ overlay_style }}"></div>
        {% endunless %}
        
        <div class="slide-content">
          <div class="slide-text-wrapper">
            {% if title != blank %}
              <h2 class="slide-title">{{ title }}</h2>
            {% endif %}
            {% if description != blank %}
              <p class="slide-description">{{ description }}</p>
            {% endif %}
            {% if button_text != blank and button_link != blank %}
              <a href="{{ button_link }}" class="slide-button">{{ button_text }}</a>
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>

  {% if show_arrows %}
    <button class="nav-arrows prev-btn" type="button" aria-label="Slide anterior">‹</button>
    <button class="nav-arrows next-btn" type="button" aria-label="Próximo slide">›</button>
  {% endif %}

  {% if show_dots %}
    <div class="slider-indicators" id="indicators{{ section.id }}"></div>
  {% endif %}

  {% if autoplay %}
    <div class="autoplay-progress" id="autoplayProgress{{ section.id }}"></div>
  {% endif %}
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const sliderId = '{{ slider_id }}';
  const sliderContainer = document.getElementById(sliderId);
  
  if (!sliderContainer) return;
  
  const slides = sliderContainer.querySelectorAll('.trade-slide');
  const totalSlides = slides.length;
  
  if (totalSlides === 0) return;
  
  let currentSlide = 0;
  let isAutoplay = {{ autoplay | json }};
  let autoplaySpeed = {{ autoplay_speed }};
  let autoplayInterval;
  let progressInterval;
  let touchStartX = 0;
  let touchEndX = 0;
  let isTransitioning = false;

  function createIndicators() {
    const indicatorContainer = document.getElementById('indicators{{ section.id }}');
    if (!indicatorContainer) return;
    
    indicatorContainer.innerHTML = '';
    
    for (let i = 0; i < totalSlides; i++) {
      const indicator = document.createElement('div');
      indicator.className = `indicator ${i === 0 ? 'active' : ''}`;
      indicator.addEventListener('click', () => goToSlide(i));
      indicatorContainer.appendChild(indicator);
    }
  }

  function goToSlide(index) {
    if (isTransitioning || index === currentSlide) return;
    
    isTransitioning = true;
    currentSlide = index;
    updateSlides();
    restartAutoplay();
    
    setTimeout(() => {
      isTransitioning = false;
    }, {{ section.settings.transition_speed | default: 800 }});
  }

  function changeSlide(direction) {
    if (isTransitioning) return;
    
    let nextSlide = currentSlide + direction;
    
    if (nextSlide >= totalSlides) {
      nextSlide = 0;
    } else if (nextSlide < 0) {
      nextSlide = totalSlides - 1;
    }
    
    goToSlide(nextSlide);
  }

  function updateSlides() {
    slides.forEach((slide, index) => {
      slide.classList.remove('active', 'prev');
      
      if (index === currentSlide) {
        slide.classList.add('active');
      } else if (index === currentSlide - 1 || (currentSlide === 0 && index === totalSlides - 1)) {
        slide.classList.add('prev');
      }
    });

    updateIndicators();
  }

  function updateIndicators() {
    const indicators = sliderContainer.querySelectorAll('.indicator');
    indicators.forEach((indicator, index) => {
      indicator.classList.toggle('active', index === currentSlide);
    });
  }

  function startAutoplay() {
    if (!isAutoplay) return;
    
    stopAutoplay();
    autoplayInterval = setInterval(() => {
      changeSlide(1);
    }, autoplaySpeed);
    
    startProgressBar();
  }

  function stopAutoplay() {
    if (autoplayInterval) {
      clearInterval(autoplayInterval);
      autoplayInterval = null;
    }
    if (progressInterval) {
      clearInterval(progressInterval);
      progressInterval = null;
    }
  }

  function restartAutoplay() {
    if (isAutoplay) {
      startAutoplay();
    }
  }

  function startProgressBar() {
    const progressBar = document.getElementById('autoplayProgress{{ section.id }}');
    if (!progressBar) return;
    
    let width = 0;
    const increment = 100 / (autoplaySpeed / 100);
    
    progressInterval = setInterval(() => {
      width += increment;
      progressBar.style.width = width + '%';
      
      if (width >= 100) {
        width = 0;
      }
    }, 100);
  }

  function handleSwipe() {
    const swipeThreshold = 50;
    const diff = touchStartX - touchEndX;
    
    if (Math.abs(diff) > swipeThreshold) {
      if (diff > 0) {
        changeSlide(1);
      } else {
        changeSlide(-1);
      }
    }
  }

  function setupEventListeners() {
    const prevBtn = sliderContainer.querySelector('.prev-btn');
    const nextBtn = sliderContainer.querySelector('.next-btn');
    
    if (prevBtn) {
      prevBtn.addEventListener('click', (e) => {
        e.preventDefault();
        changeSlide(-1);
      });
    }
    
    if (nextBtn) {
      nextBtn.addEventListener('click', (e) => {
        e.preventDefault();
        changeSlide(1);
      });
    }

    sliderContainer.addEventListener('touchstart', (e) => {
      touchStartX = e.changedTouches[0].screenX;
    }, { passive: true });

    sliderContainer.addEventListener('touchend', (e) => {
      touchEndX = e.changedTouches[0].screenX;
      handleSwipe();
    }, { passive: true });

    sliderContainer.addEventListener('mouseenter', () => {
      if (isAutoplay) {
        stopAutoplay();
      }
    });

    sliderContainer.addEventListener('mouseleave', () => {
      if (isAutoplay) {
        startAutoplay();
      }
    });
  }

  function init() {
    createIndicators();
    setupEventListeners();
    updateSlides();
    
    if (isAutoplay) {
      startAutoplay();
    }
  }

  init();

  window.addEventListener('beforeunload', () => {
    stopAutoplay();
  });
});
</script>

