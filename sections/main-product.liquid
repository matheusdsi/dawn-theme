<script type="text/javascript">
function randomIntFromInterval(min, max) {
    return Math.floor(Math.random() * (max - min + 1) + min);
}

// Configurações baseadas nas settings do bloco
var total_items = {{ block.settings.total_items }};
var d = new Date();
var min_items_left = {{ block.settings.min_items_left }};
var max_items_left = {{ block.settings.max_items_left }};
var remaining_items = randomIntFromInterval(min_items_left, max_items_left);
var min_of_remaining_items = 1;
var decrease_after = 3.7;
var decrease_after_first_item = 0.17;

// Vanilla JavaScript implementation
function initProgressBar(element) {
    // Check if content already exists, if so just update the count
    var existingCount = element.querySelector('.count');
    if (existingCount) {
        existingCount.textContent = remaining_items;
    } else {
        // Only create HTML if it doesn't exist
        var html = "<p>Restam apenas <b><span class='count'>" + remaining_items + "</span></b> unidades deste produto</p>" + "<div class='progressbar'><div style='width:100%'></div></div>";
        element.classList.add('items-count');
        element.innerHTML = html;
    }
    updateMeter(element);
    
    setTimeout(function() {
        remaining_items--;
        if (remaining_items < min_of_remaining_items) {
            remaining_items = randomIntFromInterval(min_items_left, max_items_left);
        }
        var countElements = document.querySelectorAll('.count');
        countElements.forEach(function(el) {
            el.style.backgroundColor = '#CE0201';
            el.style.color = '#fff';
        });
        setTimeout(function() {
            countElements.forEach(function(el) {
                el.style.backgroundColor = '#fff';
                el.style.color = '#CE0201';
            });
        }, 1000 * 60 * 0.03);
        var countEl = element.querySelector(".count");
        if (countEl) countEl.textContent = remaining_items;
        updateMeter(element);
    }, 1000 * 60 * decrease_after_first_item);
    
    setInterval(function() {
        remaining_items--;
        if (remaining_items < min_of_remaining_items) {
            remaining_items = randomIntFromInterval(min_items_left, max_items_left);
        }
        var countElements = document.querySelectorAll('.count');
        countElements.forEach(function(el) {
            el.style.backgroundColor = '#CE0201';
            el.style.color = '#fff';
        });
        setTimeout(function() {
            countElements.forEach(function(el) {
                el.style.backgroundColor = '#fff';
                el.style.color = '#CE0201';
            });
        }, 1000 * 60 * 0.03);
        var countEl = element.querySelector(".count");
        if (countEl) countEl.textContent = remaining_items;
        updateMeter(element);
    }, 1000 * 60 * decrease_after);
}

function updateMeter(element) {
    var percentage = 100 * remaining_items / total_items;
    var progressDiv = element.querySelector('.progressbar div:first-child');
    if (remaining_items < 10 && progressDiv) {
        progressDiv.classList.add('less-than-ten');
    }
    var progressBar = element.querySelector('.progressbar');
    if (progressBar) {
        progressBar.classList.add('active', 'progress-striped');
        setTimeout(function() {
            if (progressDiv) {
                myanimate(progressDiv, percentage);
            }
            progressBar.classList.remove('active', 'progress-striped');
        }, 1000);
    }
}

function myanimate(element, targetPercentage) {
    var currentPercentage = 0;
    var progressBarWidth = parseInt(getComputedStyle(element.closest('.progressbar')).width);
    var currentWidth = parseInt(getComputedStyle(element).width);
    var currentPercent = Math.floor(100 * currentWidth / progressBarWidth);
    
    if (currentPercent > targetPercentage) {
        currentPercentage = currentPercent;
    }

    function frame() {
        if (currentPercent > targetPercentage) {
            currentPercentage--;
        } else {
            currentPercentage++;
        }
        element.style.width = currentPercentage + '%';
        if (currentPercentage == targetPercentage || currentPercentage <= 0 || currentPercentage >= 100) {
            clearInterval(animationInterval);
        }
    }
    var animationInterval = setInterval(frame, 40);
}

// Initialize when DOM is loaded
document.addEventListener('DOMContentLoaded', function() {
    var progressBarElement = document.getElementById('progress_bar');
    if (progressBarElement) {
        initProgressBar(progressBarElement);
    }
});
</script>

