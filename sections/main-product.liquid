{%- when 'visualizacao-produto' -%}
  <div class="visualizacao-produto" style="color: {{ block.settings.text_color }};">
    {% if block.settings.show_dot %}
      <span class="pulsing-dot" id="dot-{{ block.id }}" style="background-color: {{ block.settings.text_color }};"></span>
    {% endif %}
    <span id="contador-visualizacao-{{ block.id }}" class="contador-texto">
      Carregando...
    </span>
  </div>



              
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const min = {{ block.settings.min_value }};
      const max = {{ block.settings.max_value }};
      const el = document.getElementById('contador-visualizacao-{{ block.id }}');
      const dot = document.getElementById('dot-{{ block.id }}');
      const storageKey = 'visualizacao-produto-{{ block.id }}';

      if (max <= min) {
        el.innerText = "⚠️ Máximo precisa ser maior que o mínimo";
        return;
      }

      function getRandomDelay() {
        return Math.floor(Math.random() * (40000 - 20000 + 1)) + 20000; // 20s - 40s
      }

      function getNextValue(current, min, max) {
        const delta = Math.random() < 0.5 ? -1 : 1;
        let next = current + delta;
        if (next < min) next = current + 1;
        if (next > max) next = current - 1;
        return next;
      }

      function aplicarMudanca(valorNovo) {
        const texto = valorNovo === 1
          ? `${valorNovo} pessoa visualizando este produto`
          : `${valorNovo} pessoas visualizando este produto`;

        el.classList.add('fade-out');
        if (dot) dot.classList.add('fade-out');

        setTimeout(() => {
          el.textContent = texto;
          el.classList.remove('fade-out');
          el.classList.add('fade-in');
          if (dot) {
            dot.classList.remove('fade-out');
            dot.classList.add('fade-in', 'pulse-once');
          }

          setTimeout(() => {
            el.classList.remove('fade-in');
            if (dot) dot.classList.remove('fade-in', 'pulse-once');
          }, 500);
        }, 400);
      }

      function agendarMudanca(valorAtual) {
        const delay = getRandomDelay();
        const proximaTroca = Date.now() + delay;

        setTimeout(() => {
          const novoValor = getNextValue(valorAtual, min, max);
          aplicarMudanca(novoValor);
          salvarEstado(novoValor, Date.now() + getRandomDelay());
          agendarMudanca(novoValor);
        }, delay);

        salvarEstado(valorAtual, proximaTroca);
      }

      function salvarEstado(valor, proximaTrocaTimestamp) {
        localStorage.setItem(storageKey, JSON.stringify({
          valor,
          proximaTroca: proximaTrocaTimestamp
        }));
      }

      function carregarEstado() {
        const raw = localStorage.getItem(storageKey);
        if (!raw) return null;

        try {
          const dados = JSON.parse(raw);
          if (typeof dados.valor !== 'number' || typeof dados.proximaTroca !== 'number') return null;
          return dados;
        } catch {
          return null;
        }
      }

      const estado = carregarEstado();
      let valorInicial;

      if (estado && Date.now() < estado.proximaTroca && estado.valor >= min && estado.valor <= max) {
        valorInicial = estado.valor;
      } else {
        valorInicial = Math.floor(Math.random() * (max - min + 1)) + min;
      }

      aplicarMudanca(valorInicial);
      agendarMudanca(valorInicial);
    });
  </script>

