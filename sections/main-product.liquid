    const diasInicio = {{ block.settings.dias_uteis_inicio }};
    const diasFim = {{ block.settings.dias_uteis_fim }};
    const textColor = "{{ text_color }}";

    function adicionarDiasUteis(data, dias) {
      let count = 0;
      while (count < dias) {
        data.setDate(data.getDate() + 1);
        const dia = data.getDay();
        if (dia !== 0 && dia !== 6) count++;
      }
      return new Date(data);
    }

    function formatarData(data) {
      return data.toLocaleDateString('pt-BR', {
        day: 'numeric',
        month: 'long'
      });
    }

    const hoje = new Date();
    const dataInicial = adicionarDiasUteis(new Date(hoje), diasInicio);
    const dataFinal = adicionarDiasUteis(new Date(dataInicial), diasFim);

    const entregaTexto = `Receba entre: <b style="color:${textColor};">${formatarData(dataInicial)} e ${formatarData(dataFinal)}</b>`;
    document.getElementById('frete-entrega').innerHTML = entregaTexto;

