<style>
  /* ========== CORES PERSONALIZADAS - ANNOUNCEMENT BAR ========== */
  .utility-bar {
    {% if settings.custom_announcement_bg != blank %}
      background-color: {{ settings.custom_announcement_bg }} !important;
    {% endif %}
    {% if settings.custom_announcement_text != blank %}
      color: {{ settings.custom_announcement_text }} !important;
    {% endif %}
  }
  
  .utility-bar-background {
    {% if settings.custom_announcement_bg != blank %}
      background-color: {{ settings.custom_announcement_bg }} !important;
    {% endif %}
  }
  
  /* Força cores em todos os elementos do announcement bar */
  .utility-bar *,
  .utility-bar .announcement-bar,
  .utility-bar .announcement-bar *,
  .utility-bar .announcement-bar__message,
  .utility-bar .announcement-bar__message *,
  .utility-bar .announcement-bar__announcement,
  .utility-bar .announcement-bar__announcement *,
  .utility-bar .announcement-bar-scrolling,
  .utility-bar .announcement-bar-scrolling *,
  .utility-bar .announcement-bar-item,
  .utility-bar .announcement-bar-item *,
  .utility-bar .announcement-bar-track,
  .utility-bar .announcement-bar-track * {
    {% if settings.custom_announcement_text != blank %}
      color: {{ settings.custom_announcement_text }} !important;
    {% endif %}
  }
  
  /* Links específicos */
  .utility-bar .announcement-bar__link,
  .utility-bar .announcement-bar__link *,
  .utility-bar a,
  .utility-bar a * {
    {% if settings.custom_announcement_text != blank %}
      color: {{ settings.custom_announcement_text }} !important;
    {% endif %}
    text-decoration: none !important;
  }
  
  .utility-bar .announcement-bar__link:hover,
  .utility-bar .announcement-bar__link:hover *,
  .utility-bar a:hover,
  .utility-bar a:hover * {
    {% if settings.custom_announcement_text != blank %}
      color: {{ settings.custom_announcement_text }} !important;
      opacity: 0.8;
    {% endif %}
  }
  
  /* Ícones */
  .utility-bar .announcement-bar__icon,
  .utility-bar .announcement-bar__icon *,
  .utility-bar .announcement-bar__icon svg,
  .utility-bar .announcement-bar__icon svg *,
  .utility-bar .announcement-bar__icon path {
    {% if settings.custom_announcement_text != blank %}
      color: {{ settings.custom_announcement_text }} !important;
      fill: {{ settings.custom_announcement_text }} !important;
    {% endif %}
  }
  
  /* Separadores */
  .utility-bar .announcement-bar-separator {
    {% if settings.custom_announcement_text != blank %}
      color: {{ settings.custom_announcement_text }} !important;
    {% endif %}
    margin: 0 {{ section.settings.separator_spacing }}px;
    font-weight: 400;
  }
  
  /* ========== SCROLL CONTÍNUO ========== */
  .announcement-bar-scrolling {
    overflow: hidden;
    white-space: nowrap;
    position: relative;
  }
  
  .announcement-bar-track {
    display: inline-flex;
    animation: scroll-continuous {{ section.settings.scroll_speed }}s linear infinite;
    will-change: transform;
  }
  
  .announcement-bar-item {
    flex: 0 0 auto;
    padding-right: {{ section.settings.item_spacing }}px;
    white-space: nowrap;
    display: inline-flex;
    align-items: center;
  }
  
  @keyframes scroll-continuous {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
  
  /* ========== EFEITOS ESPECIAIS ========== */
  {% if section.settings.pause_on_hover %}
    .announcement-bar-scrolling:hover .announcement-bar-track {
      animation-play-state: paused;
    }
  {% endif %}
  
  {% if section.settings.enable_fade_edges %}
    .announcement-bar-scrolling::before,
    .announcement-bar-scrolling::after {
      content: '';
      position: absolute;
      top: 0;
      bottom: 0;
      width: {{ section.settings.fade_width }}px;
      z-index: 2;
      pointer-events: none;
    }
    
    .announcement-bar-scrolling::before {
      left: 0;
      {% if settings.custom_announcement_bg != blank %}
        background: linear-gradient(to right, {{ settings.custom_announcement_bg }}, transparent);
      {% else %}
        background: linear-gradient(to right, rgb(var(--color-background)), transparent);
      {% endif %}
    }
    
    .announcement-bar-scrolling::after {
      right: 0;
      {% if settings.custom_announcement_bg != blank %}
        background: linear-gradient(to left, {{ settings.custom_announcement_bg }}, transparent);
      {% else %}
        background: linear-gradient(to left, rgb(var(--color-background)), transparent);
      {% endif %}
    }
  {% endif %}
  
  /* ========== TAMANHOS E ESPAÇAMENTOS ========== */
  .announcement-bar__message img {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    margin-bottom: 2px;
    margin-right: 4px;
  }
  
  .announcement-bar__icon svg {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    margin-top: 2px;
    margin-right: 1px;
  }
  
  .announcement-bar__message span {
    font-size: 12px;
  }
  
  /* ========== RESPONSIVIDADE ========== */
  @media screen and (max-width: 768px) {
    .announcement-bar-track {
      animation-duration: {{ section.settings.mobile_scroll_speed }}s;
    }
    
    .announcement-bar-item {
      padding-right: {{ section.settings.mobile_item_spacing }}px;
    }
  }
  
  /* ========== CORREÇÕES DE COMPATIBILIDADE ========== */
  /* Remove estilos conflitantes do tema */
  .utility-bar .color-scheme-1,
  .utility-bar .color-scheme-2,
  .utility-bar .color-scheme-3,
  .utility-bar .color-scheme-4,
  .utility-bar .color-scheme-5 {
    {% if settings.custom_announcement_bg != blank %}
      background-color: {{ settings.custom_announcement_bg }} !important;
    {% endif %}
    {% if settings.custom_announcement_text != blank %}
      color: {{ settings.custom_announcement_text }} !important;
    {% endif %}
  }
  
  /* Força aplicação em elementos com inline styles */
  .utility-bar[style*="background"],
  .utility-bar .announcement-bar[style*="background"],
  .utility-bar .announcement-bar__message[style*="background"] {
    {% if settings.custom_announcement_bg != blank %}
      background-color: {{ settings.custom_announcement_bg }} !important;
    {% endif %}
  }
  
  .utility-bar[style*="color"],
  .utility-bar .announcement-bar[style*="color"],
  .utility-bar .announcement-bar__message[style*="color"] {
    {% if settings.custom_announcement_text != blank %}
      color: {{ settings.custom_announcement_text }} !important;
    {% endif %}
  }
  
  /* Sobrescreve qualquer cor do esquema padrão */
  .utility-bar.gradient {
    {% if settings.custom_announcement_bg != blank %}
      background: {{ settings.custom_announcement_bg }} !important;
    {% endif %}
  }
  
  .utility-bar.gradient::before {
    display: none !important;
  }
  
  /* Força cores em pseudo-elementos */
  .utility-bar::before,
  .utility-bar::after,
  .utility-bar *::before,
  .utility-bar *::after {
    {% if settings.custom_announcement_bg != blank %}
      background-color: {{ settings.custom_announcement_bg }} !important;
    {% endif %}
    {% if settings.custom_announcement_text != blank %}
      color: {{ settings.custom_announcement_text }} !important;
    {% endif %}
  }
</style>





<div
  class="utility-bar color-{{ section.settings.color_scheme }} gradient{% if section.settings.show_line_separator and section.blocks.size > 0 %} utility-bar--bottom-border{% elsif section.settings.show_line_separator and section.settings.show_social and social_icons%} utility-bar--bottom-border-social-only{% endif %}{% if section.settings.enable_country_selector or section.settings.enable_language_selector %} header-localization{% endif %}"
>
  <div class="utility-bar-background"></div>

  <div class="utility-bar-background page-width utility-bar__grid{% if announcement_bar and language_country_selector or section.settings.show_social and social_icons %} utility-bar__grid--3-col{% elsif language_country_selector or section.settings.show_social and social_icons %} utility-bar__grid--2-col{% endif %}">
    {%- if section.settings.show_social and social_icons -%}
      {%- render 'social-icons' -%}
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      {%- if section.settings.enable_scroll_mode and section.blocks.size > 1 -%}
        <div class="announcement-bar announcement-bar-scrolling" role="region" aria-label="{{ 'sections.header.announcement' | t }}">
          <div class="announcement-bar-track">
            {%- comment -%} Primeira sequência {%- endcomment -%}
            {%- for block in section.blocks -%}
              <div class="announcement-bar-item" {{ block.shopify_attributes }}>
                {%- if block.settings.text != blank -%}
                  {%- if block.settings.link != blank -%}
                    <a href="{{ block.settings.link }}" class="announcement-bar__link link link--text focus-inset">
                  {%- endif -%}
                  
                  <p class="announcement-bar__message h5">
                    {%- if block.settings.icon != blank -%}
                      <img
                        src="{{ block.settings.icon | img_url: 'original' }}"
                        alt="{{ block.settings.icon.alt }}"
                        class="announcement-bar__icon"
                        width="{{ block.settings.icon_size }}px"
                        height="{{ block.settings.icon_size }}px"
                      >
                    {%- elsif block.settings.custom_icon != 'none' and block.settings.icon == blank -%}
                      <span class="announcement-bar__icon" style="width: {{ section.settings.icon_size }}px; height: {{ section.settings.icon_size }}px; display: inline-block; margin-right: 8px; vertical-align: middle; color: {{ block.settings.fill_icon }};">
                        {% render 'icon', icon: block.settings.custom_icon %}
                      </span>
                    {%- endif -%}
                    <span>{{ block.settings.text | escape }}</span>
                  </p>
                  
                  {%- if block.settings.link != blank -%}
                    </a>
                  {%- endif -%}
                {%- endif -%}
              </div>
              {%- unless forloop.last -%}
                <span class="announcement-bar-separator">{{ section.settings.separator_symbol }}</span>
              {%- endunless -%}
            {%- endfor -%}
            
            {%- comment -%} Separador entre sequências {%- endcomment -%}
            <span class="announcement-bar-separator">{{ section.settings.separator_symbol }}</span>
            
            {%- comment -%} Segunda sequência para loop contínuo {%- endcomment -%}
            {%- for block in section.blocks -%}
              <div class="announcement-bar-item">
                {%- if block.settings.text != blank -%}
                  {%- if block.settings.link != blank -%}
                    <a href="{{ block.settings.link }}" class="announcement-bar__link link link--text focus-inset">
                  {%- endif -%}
                  
                  <p class="announcement-bar__message h5">
                    {%- if block.settings.icon != blank -%}
                      <img
                        src="{{ block.settings.icon | img_url: 'original' }}"
                        alt="{{ block.settings.icon.alt }}"
                        class="announcement-bar__icon"
                        width="{{ section.settings.icon_size }}px"
                        height="{{ section.settings.icon_size }}px"
                      >
                    {%- elsif block.settings.custom_icon != 'none' and block.settings.icon == blank -%}
                      <span class="announcement-bar__icon" style="width: {{ section.settings.icon_size }}px; height: {{ section.settings.icon_size }}px; display: inline-block; margin-right: 8px; vertical-align: middle; color: {{ block.settings.fill_icon }};">
                        {% render 'icon', icon: block.settings.custom_icon %}
                      </span>
                    {%- endif -%}
                    <span>{{ block.settings.text | escape }}</span>
                  </p>
                  
                  {%- if block.settings.link != blank -%}
                    </a>
                  {%- endif -%}
                {%- endif -%}
              </div>
              {%- unless forloop.last -%}
                <span class="announcement-bar-separator">{{ section.settings.separator_symbol }}</span>
              {%- endunless -%}
            {%- endfor -%}
          </div>
        </div>
      {%- else -%}
        {%- comment -%} Modo slideshow original {%- endcomment -%}
        {%- if section.blocks.size == 1 -%}
          <div
            class="announcement-bar{% if section.settings.show_social %} announcement-bar--one-announcement{% endif %}"
            role="region"
            aria-label="{{ 'sections.header.announcement' | t }}"
            {{ section.blocks.first.shopify_attributes }}
          >
            {%- if section.blocks.first.settings.text != blank -%}
              {%- if section.blocks.first.settings.link != blank -%}
                <a
                  href="{{ section.blocks.first.settings.link }}"
                  class="announcement-bar__link link link--text focus-inset animate-arrow"
                >
              {%- endif -%}

              {% assign first_block = section.blocks.first %}
              <p class="announcement-bar__message h5">
                {%- if first_block.settings.icon != blank -%}
                  <img
                    src="{{ first_block.settings.icon | img_url: 'original' }}"
                    alt="{{ first_block.settings.icon.alt }}"
                    class="announcement-bar__icon"
                    width="{{ first_block.settings.icon_size }}px"
                    height="{{ first_block.settings.icon_size }}px"
                  >
                {%- elsif first_block.settings.custom_icon != 'none' and first_block.settings.icon == blank -%}
                  <span class="announcement-bar__icon" style="width: {{ section.settings.icon_size }}px; height: {{ section.settings.icon_size }}px; display: inline-block; margin-right: 8px; vertical-align: middle; color: {{ first_block.settings.fill_icon }};">
                    {% render 'icon', icon: first_block.settings.custom_icon %}
                  </span>
                {%- endif -%}
                <span>{{ first_block.settings.text | escape }}</span>
                {%- if first_block.settings.link != blank -%}
                  {{ 'icon-arrow.svg' | inline_asset_content }}
                {%- endif -%}
              </p>

              {%- if section.blocks.first.settings.link != blank -%}
                </a>
              {%- endif -%}
            {%- endif -%}
          </div>
        {%- else -%}
          <slideshow-component
            class="announcement-bar"
            role="region"
            aria-roledescription="{{ 'sections.announcements.carousel' | t }}"
            aria-label="{{ 'sections.announcements.announcement_bar' | t }}"
          >
            <div class="announcement-bar-slider slider-buttons">
              <button
                type="button"
                class="slider-button slider-button--prev"
                name="previous"
                aria-label="{{ 'sections.announcements.previous_announcement' | t }}"
                aria-controls="Slider-{{ section.id }}"
              >
                <span class="svg-wrapper">
                  {%- render 'icon' with 'chevron-left' -%}
                </span>
              </button>
              <div
                class="grid grid--1-col slider slider--everywhere"
                id="Slider-{{ section.id }}"
                aria-live="polite"
                aria-atomic="true"
                data-autoplay="{{ section.settings.auto_rotate }}"
                data-speed="{{ section.settings.change_slides_speed }}"
              >
                {%- for block in section.blocks -%}
                  <div
                    class="slideshow__slide slider__slide grid__item grid--1-col"
                    id="Slide-{{ section.id }}-{{ forloop.index }}"
                    {{ block.shopify_attributes }}
                    role="group"
                    aria-roledescription="{{ 'sections.announcements.announcement' | t }}"
                    aria-label="{{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
                    tabindex="-1"
                  >
                    <div class="announcement-bar__announcement" role="region" aria-label="{{ 'sections.header.announcement' | t }}">
                      {%- if block.settings.text != blank -%}
                        {%- if block.settings.link != blank -%}
                          <a
                            href="{{ block.settings.link }}"
                            class="announcement-bar__link link link--text focus-inset animate-arrow"
                          >
                        {%- endif -%}
                        <p class="announcement-bar__message h5">
                          {%- if block.settings.icon != blank -%}
                            <img
                              src="{{ block.settings.icon | img_url: 'original' }}"
                              alt="{{ block.settings.icon.alt }}"
                              class="announcement-bar__icon"
                              style="vertical-align: middle;"
                            >
                          {%- elsif block.settings.custom_icon != 'none' and block.settings.icon == blank -%}
                            <span
                              class="announcement-bar__icon"
                              style="vertical-align: middle; color: {{ block.settings.fill_icon }}"
                            >
                              {% render 'icon', icon: block.settings.custom_icon %}
                            </span>
                          {%- endif -%}
                          <span>{{ block.settings.text | escape }}</span>
                        </p>
                        {%- if block.settings.link != blank -%}
                          </a>
                        {%- endif -%}
                      {%- endif -%}
                    </div>
                  </div>
                {%- endfor -%}
              </div>
              <button
                type="button"
                class="slider-button slider-button--next"
                name="next"
                aria-label="{{ 'sections.announcements.next_announcement' | t }}"
                aria-controls="Slider-{{ section.id }}"
              >
                <span class="svg-wrapper">
                  {%- render 'icon' with 'chevron-right' -%}
                </span>
              </button>
            </div>
          </slideshow-component>
          {%- if request.design_mode -%}
            <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
            <style>
              .announcement-bar-slider .slider__slide[aria-hidden='true'] {
                visibility: hidden;
              }
            </style>
          {%- endif -%}
        {%- endif -%}
      {%- endif -%}
    {%- endif -%}

    <div class="localization-wrapper">
      {%- if section.settings.enable_country_selector and localization.available_countries.size > 1 -%}
        <localization-form class="small-hide medium-hide">
          {%- form 'localization', id: 'AnnouncementCountryForm', class: 'localization-form' -%}
            <div>
              <h2 class="visually-hidden" id="AnnouncementCountryLabel">{{ 'localization.country_label' | t }}</h2>
              {%- render 'country-localization', localPosition: 'AnnouncementCountry' -%}
            </div>
          {%- endform -%}
        </localization-form>
      {% endif %}

      {%- if section.settings.enable_language_selector and localization.available_languages.size > 1 -%}
        <localization-form class="small-hide medium-hide">
          {%- form 'localization', id: 'AnnouncementLanguageForm', class: 'localization-form' -%}
            <div>
              <h2 class="visually-hidden" id="AnnouncementLanguageLabel">{{ 'localization.language_label' | t }}</h2>
              {%- render 'language-localization', localPosition: 'AnnouncementLanguage' -%}
            </div>
          {%- endform -%}
        </localization-form>
      {%- endif -%}
    </div>
  </div>
</div>

